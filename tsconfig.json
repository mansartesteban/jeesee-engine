{
  "compilerOptions": {
    "target": "ES2017",
    "outDir": "dist-ts",
    "moduleResolution": "node",
    "watch": true,
    "strict": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "typeRoots": [
      "node_modules/@types",
      "src/@types"
    ],
    "baseUrl": "./",
    "paths": {
      "@types": ["src/@types"],
      "@types/*": ["src/@types/*"],
      "@assets/*": ["public/assets/*"],
      "@utils/*": ["src/utils/*"],
      "@actors/*": ["src/actors/*"],
      "@/*": ["src/*"]
    }
  },
  "exclude": [
    "node_modules"
  ]
}