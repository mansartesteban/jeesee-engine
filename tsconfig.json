{
  "compilerOptions": {
    "target": "ES2017",
    "outDir": "dist-ts",
    "moduleResolution": "node",
    "watch": true,
    "strict": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "typeRoots": [
      "node_modules/@types",
      "src/@types"
    ],
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "@types": ["src/@types"]
    }
  },
  "exclude": [
    "node_modules"
  ]
}